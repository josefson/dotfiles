# This tmux statusbar config was created by tmuxline.vim
# set -g status-utf8 "on"
set -g status "on"
set -g status-attr "none"
set -g status-fg "colour9"
set -g status-bg "colour16"
set -g status-justify "centre"
# Sides sizing
set -g status-right-length "100"
set -g status-right-attr "none"
set -g status-left-length "100"
set -g status-left-attr "none"
# Message
set -g message-fg "colour9"
set -g message-bg "colour16"
set -g message-command-fg "colour9"
set -g message-command-bg "colour16"
# Pane
set -g pane-border-fg "colour11"
set -g pane-active-border-fg "colour14"
# window
# setw -g window-status-attr "none"
setw -g window-status-fg "colour9"
setw -g window-status-bg "colour16"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-bg "colour16"
setw -g window-status-activity-fg "colour9"
setw -g window-status-separator ""
# Status Content
set -g status-left "#[fg=colour9,bg=colour16] [#S:#I.#P] #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour9,bg=colour16]%a|#(date +\"%Y-%m-%d\")#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour9,bg=colour16]#(whoami)@#H "
# Center/Windows
setw -g window-status-current-format "#[fg=colour16,bg=colour9,nobold,nounderscore,noitalics]#[fg=colour16,bg=colour9]#I:#W#F#[fg=colour9,bg=colour16,nobold,nounderscore,noitalics]"
setw -g window-status-format "#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[default]#I:#W#F#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]"
